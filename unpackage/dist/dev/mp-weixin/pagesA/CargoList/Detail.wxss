.page_wrap {
  padding: 20rpx 30rpx 130rpx 30rpx;
}
.page_wrap .detail {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.page_wrap .detail .detail_item {
  margin-bottom: 30rpx;
}
.page_wrap .detail .pz {
  border-top: 1px dashed #E7E7E7;
  padding-top: 30rpx;
}
.page_wrap .goods {
  background-color: #fff;
}
.page_wrap .goods .slot_wrap .item {
  border-bottom: 1px solid #E7E7E7;
}
.page_wrap .goods .slot_wrap .total {
  color: #D30000;
  font-size: 24rpx;
  width: 100%;
  text-align: right;
  padding-top: 20rpx;
  border-top: 1px solid #E7E7E7;
}
.page_wrap .btn_wrap {
  position: fixed;
  width: 100%;
  background-color: #fff;
  padding: 30rpx 0;
  bottom: 0;
  left: 0;
  border-top: 1px solid #f1f1f1;
  display: flex;
  justify-content: center;
}
.page_wrap .btn_wrap .btn {
  width: 240rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 28rpx;
}
.page_wrap .btn_wrap .left {
  background: linear-gradient(90deg, #F43B3B 0%, #FF3033 100%);
  margin-right: 30rpx;
}
.page_wrap .btn_wrap .right {
  background: linear-gradient(113deg, #F87523 0%, #FF6C00 0%, #FD1D20 100%);
}

